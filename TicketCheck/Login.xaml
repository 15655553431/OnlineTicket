        <Label Content="汽车站检票程序" HorizontalAlignment="Left" Margin="141,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Image HorizontalAlignment="Left" Height="150" Margin="26,47,0,0" VerticalAlignment="Top" Width="150" Stretch="Fill" Source="Themes/image/logo.png"/>
        <PasswordBox Name="PassWord" HorizontalAlignment="Left" Margin="290,136,0,0" VerticalAlignment="Top" Width="144"/>

    </Grid>
</Window>
