<title>编辑班车信息</title>
</head>
<body>
<article class="page-container">
	<form class="form form-horizontal" id="form-admin-add">
        @Html.HiddenFor(m=>m.ID)
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>班车编号：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<input type="text" class="input-text" value="@Model.Number" placeholder="班车编号" id="Number" name="Number">
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>车牌号：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<input type="text" class="input-text" value="@Model.LicenceTag" placeholder="车牌号码" id="LicenceTag" name="LicenceTag">
		</div>
	</div>
    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>司机：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<input type="text" class="input-text" value="@Model.Driver" placeholder="司机名称" id="Driver" name="Driver">
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>汽车类型：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<input type="text" class="input-text" value="@Model.BusType" placeholder="汽车类型" id="BusType" name="BusType">
		</div>
	</div>
    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>发车时间：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<input type="text" class="input-text" value="@Model.OneDate.ToString("yyyy-MM-dd HH:mm:ss")" placeholder="发车时间" id="GoTime" name="GoTime">
		</div>
	</div>
    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>历史(分钟)：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<input type="text" class="input-text" value="@Model.OverTime" placeholder="旅途耗时" id="OverTime" name="OverTime">
		</div>
	</div>
    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>票价：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<input type="text" class="input-text" value="@Model.Price" placeholder="元" id="Price" name="Price">
		</div>
	</div>

    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>座位总数：</label>
		<div class="formControls col-xs-8 col-sm-9">
			<input type="text" class="input-text" value="@Model.Passengers" placeholder="座位总数" id="passengers" name="passengers">
		</div>
	</div>

    <div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>所属路线：</label>
		<div class="formControls col-xs-8 col-sm-9">
            <select class="select" id="PathInfoID" name="PathInfoID">
                <option value="@Model.PathInfoID">
                    @Model.PathInfo.Number (@Model.PathInfo.Origin -@Model.PathInfo.Destination )
                </option>
			</select>
			<div>
                <label>路线模糊查询：</label>
                <input type="text" onchange="getselect();"  class="input-text" style="width:50%" value="" placeholder="" id="path" name="path" >
            </div>
		</div>
	</div>
	
	
	<div class="row cl">
		<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
			<input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;提交更改&nbsp;&nbsp;">
		</div>
	</div>
	</form>
</article>

<!--_footer 作为公共模版分离出去--> 
<script type="text/javascript" src="~/Content/lib/jquery/1.9.1/jquery.min.js"></script> 
<script type="text/javascript" src="~/Content/lib/layer/2.4/layer.js"></script>
<script type="text/javascript" src="~/Content/static/h-ui/js/H-ui.min.js"></script> 
