<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/jquery.validate.js"></script> 
<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/validate-methods.js"></script> 
<script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/messages_zh.js"></script> 
<script type="text/javascript" src="~/Content/lib/layui/layui.js"></script>
<script type="text/javascript">

    layui.use('laydate', function () {
        var laydate = layui.laydate;

        laydate.render({
            elem: '#GoTime'
             , type: 'datetime'
        });

    });

    function getselect() {
        var select = window.document.getElementById("PathInfoID");
        $.ajax({
            //几个参数需要注意一下
            type: "POST",//方法类型
            dataType: "json",//预期服务器返回的数据类型
            url: "/PathInfo/GetPath",//url
            data: { Search: $('#path').val() },
            success: function (data) {
                select.options.length = 0;
                for (var i = 0; data.length; i++) {
                    select.add(new Option(data[i].Number + " (" + data[i].Origin + "-" + data[i].Destination + ")", data[i].ID));
                }
            },
            error: function (data) {
            }

        });
    }

    $(function () {

        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        });

        $("#form-admin-add").validate({
            rules: {
                Number: {
                    required: true,
                    minlength: 2,
                    maxlength: 20
                },
                LicenceTag: {
                    required: true,
                    minlength: 1,
                    maxlength: 20
                },
                Driver: {
                    required: true,
                    minlength: 1,
                    maxlength: 16
                },
                GoTime: {
                    required: true,
                },
                BusType: {
                    required: true,
                    minlength: 1,
                    maxlength: 16
                },
                OverTime: {
                    required: true,
                    number: true
                },
                Price: {
                    required: true,
                    number: true
                },
                passengers: {
                    required: true,
                    number: true
                },
                PathInfoID: {
                    required: true,
                    number: true
                },

            },
            onkeyup: false,
            focusCleanup: true,
            success: "valid",
            submitHandler: function (form) {
                $(form).ajaxSubmit({
                    type: 'post',
                    url: "/FlightInfo/TempFlightEdit",
                    success: function (data) {
                        if (data == "ok") {
                            layer.msg('修改成功!', { icon: 1, time: 1000 });
                            setTimeout(function () {  //使用  setTimeout（）方法设定定时2000毫秒
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.location.reload(); // 父页面刷新
                                parent.$('.btn-refresh').click();
                                parent.layer.close(index);
                            }, 1000);
                        }
                    },
                    error: function (XmlHttpRequest, textStatus, errorThrown) {
                        layer.msg('error!', { icon: 1, time: 1000 });
                    }
                });
                //var index = parent.layer.getFrameIndex(window.name);
                //parent.location.reload(); // 父页面刷新
                //parent.$('.btn-refresh').click();
                //parent.layer.close(index);
            }
        });
    });
</script> 
<!--/请在上方写此页面业务相关的脚本-->
</body>
</html>